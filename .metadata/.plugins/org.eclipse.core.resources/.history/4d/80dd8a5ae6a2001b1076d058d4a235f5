package practica;

public class Coworking {

	public static void main(String[] args) {

		Tarjeta[] tarjetas = new Tarjeta[5];
		Persona[] personas = new Persona[5];
		Portero portero = new Portero();

		for (int i = 0; i < tarjetas.length; i++) {
			tarjetas[i] = new Tarjeta(i);
		}

		personas[0] = new Persona(0, tarjetas[0], tarjetas[1], portero);
		personas[0].start();
		personas[1] = new Persona(1, tarjetas[1], tarjetas[2], portero);
		personas[1].start();
		personas[2] = new Persona(2, tarjetas[2], tarjetas[3], portero);
		personas[2].start();
		personas[3] = new Persona(3, tarjetas[3], tarjetas[4], portero);
		personas[3].start();
		personas[4] = new Persona(4, tarjetas[4], tarjetas[0], portero);
		personas[4].start();

		for (int i = 0; i < personas.length; i++) {
			try {
				personas[i].join();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}

	}

}
