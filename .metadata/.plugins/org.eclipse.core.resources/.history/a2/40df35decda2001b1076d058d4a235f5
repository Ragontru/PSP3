package practica;

public class Persona implements Runnable {

	private int posicion;
	private Tarjeta tarjetaIzq;
	private Tarjeta tarjetaDer;
	private PC pc;
	private Thread hilo;

	public Persona(int posicion, Tarjeta tarjetaIzq, Tarjeta tarjetaDer, PC pc) {
		this.posicion = posicion;
		this.tarjetaIzq = tarjetaIzq;
		this.tarjetaDer = tarjetaDer;
		hilo = new Thread(this);
		hilo.start();

	}

	@Override
	public void run() {
		for (int i = 0; i < 4; i++) {
			synchronized (this.tarjetaIzq) {
				synchronized (this.tarjetaDer) {
					usarPC();
				}
			}
			pensar();
		}

	}

	public void usarPC() {
		tarjetaIzq.setUsando();
		tarjetaDer.setUsando();
		pc.setUsando();
		System.out.println("La persona " + posicion + " ha cogido la tarjeta izquierda " + tarjetaIzq.toString()
				+ " y la tarjeta derecha " + tarjetaDer.toString());
		System.out.println("La persona " + posicion + " está usando el PC.");

		int tiempo = (int) (Math.random() * 5000) + 2000;

		try {
			Thread.sleep(tiempo);
		} catch (InterruptedException e) {
			System.err.println("La persona no ha podido usar el PC por más de " + tiempo + " milisegundos.");
		}

		// tarjetaDer.setUsando();
		// tarjetaIzq.setUsando();
		// pc.setUsando();

	}

	public void pensar() {
		tarjetaIzq.setUsando();
		tarjetaDer.setUsando();
		pc.setUsando();
		System.out.println("La persona " + posicion + " ha dejado de usar el PC y ha devuelto las tarjetas "
				+ tarjetaIzq.toString() + " y " + tarjetaDer.toString());

		int tiempo = (int) (Math.random() * 5000) + 2000;

		try {
			Thread.sleep(tiempo);
		} catch (InterruptedException e) {
			System.err.println("La persona no ha podido pensar por más de " + tiempo + " milisegundos.");
		}
	}

}
