package practica;

public class Mesa {

	public static void main(String[] args) {

		Tarjeta[] tarjetas = new Tarjeta[5];
		Persona[] personas = new Persona[5];
		PC pc = new PC();

		for (int i = 0; i < tarjetas.length; i++) {
			tarjetas[i] = new Tarjeta(i);
		}

		personas[0] = new Persona(0, tarjetas[0], tarjetas[1], pc);
		personas[1] = new Persona(1, tarjetas[1], tarjetas[2], pc);
		personas[2] = new Persona(2, tarjetas[2], tarjetas[3], pc);
		personas[3] = new Persona(3, tarjetas[3], tarjetas[4], pc);
		personas[4] = new Persona(4, tarjetas[4], tarjetas[0], pc);

	}

	public synchronized static void showMessage(String mensaje) {
		System.out.println(mensaje);
	}

}
